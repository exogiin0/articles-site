<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <script src=" https://kit.fontawesome.com/2a95ff91e3.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="../../public/css/index.css" rel="stylesheet" type="text/css">
    <title>Blog</title>
</head>
<body>
<div class="container">
    <h1 class="mb-4 mt-5 my-articles">My Articles</h1>
    <a href="/articles/new" class="btn new-article-btn">Add Article</a>
    <% articles.forEach(article => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= article.title %></h4>
                <div class="card-subtitle mb-2">
                    <%= article.createdAt.toLocaleString() %>
                </div>
                <div class="card-text mb-2">
                    <%= article.description %>
                </div>
                <a href="articles/<%= article.slug%>" class="btn read-more">More</a>
                <a href="articles/edit/<%= article.id%>" class="btn edit">Edit</a>
                <form action="/articles/<%= article.id %>?_method=DELETE"
                      method="POST" class="d-inline">
                    <button type="submit" class="btn delete">Delete</button>
                </form>
            </div>
        </div>
    <% }) %>
</div>

</body>
</html>